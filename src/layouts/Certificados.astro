---
import Certificado from "../components/Certificado.astro";

---

<section class="mb-20 bg-gray-100">
    <div class="flex flex-col md:flex-row justify-center md:justify-between p-10 max-lg:hidden items-center w-full">
        <img class="w-32 h-20 grayscale hover:grayscale-0 hover:scale-110 duration-200 transition-all mb-4 md:mb-0" src="src/ed.svg" alt="certificado">
        <img class="w-28 h-14 grayscale hover:grayscale-0 hover:scale-110 duration-200 transition-all mb-4 md:mb-0" src="src/IBM_logo.svg.png" alt="certificado">
        <img class="w-36 h-10 grayscale hover:grayscale-0 hover:scale-110 duration-200 transition-all mb-4 md:mb-0" src="src/LinkedIn_Logo.svg.png" alt="certificado">
        <img class="w-28 h-16 grayscale hover:grayscale-0 hover:scale-110 duration-200 transition-all mb-4 md:mb-0" src="src/1280px-Cisco_logo_blue_2016.svg.png" alt="certificado">
        <img class="w-36 h-14 grayscale hover:grayscale-0 hover:scale-110 duration-200 transition-all mb-4 md:mb-0" src="src/Oracle_Curriculum_Partner.jpg" alt="certificado">
        <img class="w-28 h-14 grayscale hover:grayscale-0 hover:scale-110 duration-200 transition-all mb-4 md:mb-0" src="src/Udemy_logo.svg.png" alt="certificado">
    </div>
</section>
<section>
    <div class="flex justify-center mb-10">
        <h1 class="text-white text-4xl font-extrabold tracking-wider"><span class="bg-gradient-to-b from-blue-300  to-blue-800 text-transparent bg-clip-text ">Certificados</span></h1>
    </div>
    <div class="text-white">
        <div class="flex justify-center gap-x-3">
            <button class="font-bold p-5  text-blue-400 hover:text-blue-50 duration-200 bg-gray-800 w-max rounded-lg" id="filtrarBackend">Backend</button>
            <button class="font-bold p-5  text-blue-400 hover:text-blue-50 duration-200 bg-gray-800 w-max rounded-lg" id="filtrarFrontend">Frontend</button>
            <button class="font-bold p-5  text-blue-400 hover:text-blue-50 duration-200 bg-gray-800 w-max rounded-lg" id="showAll">Todo</button>
        </div>
        <div id="items" class="container justify-center mx-auto flex gap-4 mt-10 mb-20 max-w-full flex-wrap">
            <Certificado categoria="frontend" link="https://rb.gy/4kzad" image="Certificados/LINKEDINphp.webp"></Certificado>
            <Certificado categoria="backend" link="https://rb.gy/4r3sf" image="Certificados/certificad-curso-django.webp"></Certificado>
            <Certificado categoria="backend" link="https://rb.gy/6dsms" image="Certificados/certificad-curso-django-ecommerce.webp"></Certificado>
            <Certificado categoria="backend" link="https://rb.gy/94xql" image="Certificados/certificadoibm.webp"></Certificado>
            <Certificado categoria="backend" link="#" image="Certificados/cisco.webp"></Certificado>
            <Certificado categoria="backend" link="#" image="Certificados/ia.webp"></Certificado>
            <Certificado categoria="backend" link="#" image="Certificados/udemy.webp"></Certificado>
            <Certificado categoria="backend" link="#" image="Certificados/udemysql.webp"></Certificado>
            <Certificado categoria="backend" link="#" image="Certificados/oraclesql.webp"></Certificado>


        </div>
    </div>
</section>
